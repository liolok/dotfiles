#!/bin/bash

echo "[1] Install packages for fish shell and nano editor."
cat ${XDG_CONFIG_HOME:-~/.config}/package-list/{fish,nano} \
| pacman -Syu - --needed --asexplicit || exit 1

echo "[2] Change login shell to fish and clean-up bash dotfiles."
chsh --shell /usr/bin/fish || exit 2
rm --force --verbose ~/.bash*
export HISTFILE=${XDG_DATA_HOME:-~/.local/share}/bash/history
